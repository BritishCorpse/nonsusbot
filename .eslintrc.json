{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 13
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-var": "error",
        "prefer-const": ["error", {
            "destructuring": "any"
        }]
    },
    "globals": {
        "testing": "writable",
        "__basedir": "writable",
        "__dirname": "readonly",
        "process": "readonly"
    }
}
